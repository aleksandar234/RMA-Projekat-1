<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pacijentIv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/imeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/pacijentIv"
                app:layout_constraintBottom_toTopOf="@id/prezimeTv"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/prezimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/imeTv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/pacijentIv"
                android:layout_marginStart="16dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <GridLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnKarton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karton"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginRight="42dp"/>

            <Button
                android:id="@+id/btnOtpust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otpust"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="42dp"/>

        </GridLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView>